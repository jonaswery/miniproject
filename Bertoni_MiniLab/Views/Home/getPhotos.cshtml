@model IEnumerable<Bertoni_MiniLab.Models.Photo>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            Thumnail
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            <img src="@item.thumbnailUrl" />
        </td>
        <td>
            <button class="btnComment" id="@item.id">Comments</button>
        </td>
    </tr>
}

</table>

<script type="text/javascript">
    $(function () {
        //Load comment partial after photo selection
        $(".btnComment").click(function () {
            $.get("https://" + window.location.host + "/home/getComments?photoId=" + $(this).attr("id"), function (data) {
                $("#partialComments").html(data);
            });
        });
    });
</script>